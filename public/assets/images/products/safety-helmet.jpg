<!-- Safety Helmet Product Image -->
<svg width="300" height="400" viewBox="0 0 300 400" fill="none" xmlns="http://www.w3.org/2000/svg">
  <rect width="300" height="400" fill="#ffffff"/>
  
  <!-- Hard hat -->
  <ellipse cx="150" cy="180" rx="80" ry="40" fill="#FFE884"/>
  <path d="M70 180 Q70 130 150 130 Q230 130 230 180" fill="#FFE884"/>
  
  <!-- Helmet visor/brim -->
  <ellipse cx="150" cy="180" rx="85" ry="8" fill="#FDD835"/>
  
  <!-- Top button/attachment -->
  <rect x="140" y="120" width="20" height="10" rx="5" fill="#2C3C28"/>
  
  <!-- Side vents -->
  <ellipse cx="90" cy="150" rx="8" ry="4" fill="#FDD835"/>
  <ellipse cx="210" cy="150" rx="8" ry="4" fill="#FDD835"/>
  
  <!-- Chin strap attachment points -->
  <circle cx="100" cy="170" r="3" fill="#2C3C28"/>
  <circle cx="200" cy="170" r="3" fill="#2C3C28"/>
  
  <!-- Suspension system (visible through transparency) -->
  <path d="M120 160 Q150 140 180 160" stroke="#666" stroke-width="2" fill="none" opacity="0.7"/>
  
  <!-- Product info box -->
  <rect x="30" y="240" width="240" height="130" fill="#f8f9fa" stroke="#e5e5e5" stroke-width="2" rx="8"/>
  
  <text x="150" y="265" font-family="Arial" font-size="18" font-weight="bold" fill="#2C3C28" text-anchor="middle">Safety Hard Hat</text>
  <text x="150" y="285" font-family="Arial" font-size="14" fill="#629D23" text-anchor="middle">ANSI Z89.1 Type I Class E</text>
  
  <text x="45" y="305" font-family="Arial" font-size="11" fill="#333">• Electrical protection: 20,000V</text>
  <text x="45" y="320" font-family="Arial" font-size="11" fill="#333">• 6-point suspension system</text>
  <text x="45" y="335" font-family="Arial" font-size="11" fill="#333">• High-density polyethylene</text>
  <text x="45" y="350" font-family="Arial" font-size="11" fill="#333">• OSHA compliant</text>
  
  <!-- Price badge -->
  <circle cx="60" cy="100" r="25" fill="#2C3C28"/>
  <text x="60" y="97" font-family="Arial" font-size="10" font-weight="bold" fill="white" text-anchor="middle">$24.99</text>
  <text x="60" y="107" font-family="Arial" font-size="8" fill="white" text-anchor="middle">each</text>
  
  <!-- 3M logo area -->
  <rect x="200" y="85" width="30" height="15" fill="#FF0000" rx="3"/>
  <text x="215" y="95" font-family="Arial" font-size="10" font-weight="bold" fill="white" text-anchor="middle">3M</text>
  
  <!-- Safety certification badge -->
  <rect x="220" y="310" width="40" height="25" fill="#FFE884" stroke="#2C3C28" stroke-width="1" rx="3"/>
  <text x="240" y="318" font-family="Arial" font-size="8" font-weight="bold" fill="#2C3C28" text-anchor="middle">ANSI</text>
  <text x="240" y="328" font-family="Arial" font-size="8" fill="#2C3C28" text-anchor="middle">Z89.1</text>
</svg>
