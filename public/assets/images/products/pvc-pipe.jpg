  <text x="60" y="377" font-family="Arial" font-size="8" fill="#2C3C28" text-anchor="middle">per piece</text>
  
  <!-- Brand logo -->
  <rect x="180" y="350" width="80" height="25" fill="#2C3C28" rx="5"/>
  <text x="220" y="365" font-family="Arial" font-size="12" font-weight="bold" fill="white" text-anchor="middle">Charlotte Pipe</text>
  
  <!-- NSF certification badge -->
  <circle cx="220" cy="300" r="20" fill="#629D23"/>
  <text x="220" y="297" font-family="Arial" font-size="8" font-weight="bold" fill="white" text-anchor="middle">NSF</text>
  <text x="220" y="307" font-family="Arial" font-size="8" fill="white" text-anchor="middle">61</text>
  
  <!-- ASTM badge -->
  <rect x="200" y="45" width="40" height="15" fill="#FFE884" stroke="#2C3C28" stroke-width="1" rx="3"/>
  <text x="220" y="54" font-family="Arial" font-size="8" font-weight="bold" fill="#2C3C28" text-anchor="middle">ASTM D1785</text>
