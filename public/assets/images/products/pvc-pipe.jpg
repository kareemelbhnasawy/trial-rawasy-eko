<!-- PVC Pipe Product Image -->
<svg width="300" height="400" viewBox="0 0 300 400" fill="none" xmlns="http://www.w3.org/2000/svg">
  <rect width="300" height="400" fill="#ffffff"/>
  
  <!-- PVC Pipes bundle -->
  <g>
    <!-- Main pipe -->
    <ellipse cx="150" cy="180" rx="80" ry="20" fill="#F5F5F5"/>
    <rect x="70" y="160" width="160" height="40" fill="#FFFFFF"/>
    <ellipse cx="150" cy="160" rx="80" ry="20" fill="#FFFFFF"/>
    
    <!-- Pipe markings/text on pipe -->
    <text x="150" y="175" font-family="Arial" font-size="10" fill="#2C3C28" text-anchor="middle">PVC SCHEDULE 40</text>
    <text x="150" y="187" font-family="Arial" font-size="8" fill="#666" text-anchor="middle">4" DIAMETER • ASTM D1785 • NSF 61</text>
    
    <!-- Additional pipes in bundle -->
    <ellipse cx="150" cy="140" rx="75" ry="18" fill="#F8F8F8" opacity="0.8"/>
    <rect x="75" y="122" width="150" height="36" fill="#FAFAFA" opacity="0.8"/>
    <ellipse cx="150" cy="122" rx="75" ry="18" fill="#FAFAFA" opacity="0.8"/>
    
    <ellipse cx="150" cy="220" rx="75" ry="18" fill="#F0F0F0" opacity="0.8"/>
