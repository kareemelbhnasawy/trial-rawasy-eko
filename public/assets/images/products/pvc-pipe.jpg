    <ellipse cx="150" cy="202" rx="75" ry="18" fill="#F5F5F5" opacity="0.8"/>
  </g>
  
  <!-- Product information -->
  <rect x="30" y="50" width="240" height="80" fill="#f8f9fa" stroke="#e5e5e5" stroke-width="2" rx="8"/>
  <text x="150" y="75" font-family="Arial" font-size="18" font-weight="bold" fill="#2C3C28" text-anchor="middle">PVC Pipe Schedule 40</text>
  <text x="150" y="95" font-family="Arial" font-size="14" fill="#629D23" text-anchor="middle">4" Diameter x 10 ft Length</text>
  <text x="150" y="110" font-family="Arial" font-size="12" fill="#666" text-anchor="middle">NSF 61 Certified • 220 psi @ 73°F</text>
  <text x="150" y="123" font-family="Arial" font-size="10" fill="#666" text-anchor="middle">Polyvinyl Chloride (PVC)</text>
  
