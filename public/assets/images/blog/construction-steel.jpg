<!-- Construction Steel Blog Image -->
<svg width="400" height="250" viewBox="0 0 400 250" fill="none" xmlns="http://www.w3.org/2000/svg">
  <rect width="400" height="250" fill="#E8E8E8"/>
  
  <!-- Construction site background -->
  <rect x="0" y="180" width="400" height="70" fill="#8B7355"/>
  <rect x="0" y="170" width="400" height="20" fill="#A0522D"/>
  
  <!-- Steel rebar bundles -->
  <g transform="translate(50, 80)">
    <!-- Rebar bundle 1 -->
    <rect x="0" y="0" width="80" height="8" rx="4" fill="#4A4A4A"/>
    <rect x="0" y="12" width="80" height="8" rx="4" fill="#555555"/>
    <rect x="0" y="24" width="80" height="8" rx="4" fill="#4A4A4A"/>
    <rect x="0" y="36" width="80" height="8" rx="4" fill="#555555"/>
    <rect x="0" y="48" width="80" height="8" rx="4" fill="#4A4A4A"/>
    
    <!-- Rebar bundle 2 -->
    <rect x="100" y="10" width="80" height="8" rx="4" fill="#555555"/>
    <rect x="100" y="22" width="80" height="8" rx="4" fill="#4A4A4A"/>
    <rect x="100" y="34" width="80" height="8" rx="4" fill="#555555"/>
    <rect x="100" y="46" width="80" height="8" rx="4" fill="#4A4A4A"/>
    
    <!-- Rebar bundle 3 -->
    <rect x="200" y="5" width="80" height="8" rx="4" fill="#4A4A4A"/>
    <rect x="200" y="17" width="80" height="8" rx="4" fill="#555555"/>
    <rect x="200" y="29" width="80" height="8" rx="4" fill="#4A4A4A"/>
    <rect x="200" y="41" width="80" height="8" rx="4" fill="#555555"/>
    <rect x="200" y="53" width="80" height="8" rx="4" fill="#4A4A4A"/>
  </g>
  
  <!-- Steel beams in background -->
  <g transform="translate(20, 50)">
    <rect x="0" y="0" width="360" height="12" fill="#666666" opacity="0.7"/>
    <rect x="0" y="20" width="360" height="12" fill="#666666" opacity="0.7"/>
  </g>
  
  <!-- Construction worker silhouette -->
  <g transform="translate(320, 120)" fill="#2C3C28">
    <ellipse cx="15" cy="45" rx="8" ry="3"/>
    <rect x="10" y="25" width="10" height="20"/>
    <rect x="12" y="20" width="6" height="12"/>
    <circle cx="15" cy="15" r="6"/>
    <ellipse cx="15" cy="10" rx="8" ry="4"/>
  </g>
  
  <!-- Title overlay -->
  <rect x="20" y="20" width="280" height="60" fill="white" opacity="0.9" rx="8"/>
  <text x="30" y="40" font-family="Arial" font-size="18" font-weight="bold" fill="#2C3C28">Steel Reinforcement</text>
  <text x="30" y="60" font-family="Arial" font-size="14" fill="#629D23">Best Practices Guide</text>
  
  <!-- Category badge -->
  <rect x="320" y="200" width="70" height="25" fill="#FFE884" rx="12"/>
  <text x="355" y="215" font-family="Arial" font-size="10" font-weight="bold" fill="#2C3C28" text-anchor="middle">GUIDE</text>
</svg>
